					<name>foo</name>
					<value>bar</value>
				</property>
				<file>
					<exists></exists>
					<missing></missing>
				</file>
			</activation>
		</profile> -->
		<profile>
			<id>dev-1</id>
			<properties>
				<env.name>dev-1</env.name>
			</properties>
		</profile>
		<profile>
			<id>dev-2</id>
			<properties>
				<env.name>dev-2</env.name>
			</properties>
		</profile>
		<profile>
			<id>dev-3</id>
			<activation>
				<property>
					<name>sts.env</name>
					<value>dev-3</value>
				</property>
			</activation>
		</profile>
	</profiles>
</project>
